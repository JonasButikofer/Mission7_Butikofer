@model Mission6Movies.Models.FormModel

<h1>Submit a Movie</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Form" method="post">

    <div class="form-group">
        <input type="hidden" asp-for="MovieId"/>
    </div>

    <div class="form-group">
        <label asp-for="Title">Movie Name:</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Movie Name" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Year">Release Year:</label>
        <input type="number" class="form-control" asp-for="Year" placeholder="Year" min="1888" max="2100" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Movie Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input type="text" class="form-control" asp-for="Director" placeholder="Director Name" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent to:</label>
        <textarea asp-for="LentTo" class="form-control" rows="1" maxlength="25" placeholder="Was it lent to anyone?"></textarea>
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited" class="form-control">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes (Max 25 characters):</label>
        <textarea asp-for="Notes" class="form-control" rows="2" maxlength="25" placeholder="Enter up to 25 characters..."></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

