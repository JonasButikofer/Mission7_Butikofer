@model Mission6Movies.Models.FormModel

<h1>Submit a Movie</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Form" method="post">
    <div class="form-group">
        <label asp-for="MovieName">Movie Name:</label>
        <input type="text" class="form-control" asp-for="MovieName" placeholder="Movie Name" />
        <span asp-validation-for="MovieName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Movie Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Lent">Lent to:</label>
        <textarea asp-for="Lent" class="form-control" rows="1" maxlength="25" placeholder="Was it lent to anyone?"></textarea>
        <span asp-validation-for="Lent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited" class="form-control">
            <option value="">Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes (Max 25 characters):</label>
        <textarea asp-for="Notes" class="form-control" rows="2" maxlength="25" placeholder="Enter up to 25 characters..."></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>



